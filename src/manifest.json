{
	"name": "小说阅读器",
	"version": "1.0.0",
	"description": "小说阅读器",

	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "Book Reader"
	},

	"background": {
		"scripts": [
			"js/jquery-1.8.2.js",
			"js/functions.js",
			"js/background.js", 
			"js/log.js",
			"js/workerFileAPIWrapper.js",
			"js/bookDatabase.js", 
			"js/dirRefresh.js",
			"js/bookFormat.js",
			"js/bookParaser.js",
			"js/bookManager.js"
		]
	},

	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
	"icons": {
		"16": "icon.png",
		"128": "icon.png"
	},
	"manifest_version": 2,
	"permissions": [
		"webRequest",
		"tabs",
		"http://*/*",
		"https://*/*",
		"notifications",
		"unlimitedStorage"]
}